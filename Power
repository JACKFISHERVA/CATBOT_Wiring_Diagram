connectors:
  GND: &BUS
    type: BUS BAR
  +24V:
      <<: *BUS


  +24_Input: # this is a unique ferrule
    style: simple
    type: Bus Bar Input port
    color: RD # optional color
  GND_Input: # this is a ferrule that will be auto-generated on demand
    style: simple
    type: Bus Bar Input port
    color: BK

cables:
  W1:
    category: bundle # bundle
    length: 0.3
    gauge: 0.5 mm2
    colors: [RD, BK] # custom colors, wirecount is implicit

connections:
    -
      -GND_Input.
      - W1: [1]
      - GND: [1]
    -
      -+24V_Input.
      - W2: [2]
      - +24V: [1]
 
  
